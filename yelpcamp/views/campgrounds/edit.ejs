<% layout('layouts/boilerplate')%>


    <div class="row">
      <h1 class="text-center">Edit Campground</h1>
      <div class="col-6 offset-3">
    <form class="form-group validated-form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate>
          <div class="form-group mb-3">
              <label class="form-label" for="title">Title</label>
              <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title%>" required>
          </div>
          <div class="form-group mb-3">
              <label class="form-label" for="location">Location</label>
              <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location%>" required>
          </div>
          <div class="form-group mb-3">
            <label class="form-label" for="image">Image URL</label>
            <input type="text" class="form-control" id="image" name="campground[image]" value="<%= campground.image%>" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" placeholder="0.00" id="price" name="campground[price]" value="<%= campground.price%>" required>
          </div>
        </div>
        <div class="form-group mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea type="text" class="form-control" id="description" name="campground[description]" required><%= campground.description%></textarea>
      </div>
    
    
          <button class="mb-3 btn btn-info">Update Campground</button>
      </form>
    <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>
      </div>
    </div>